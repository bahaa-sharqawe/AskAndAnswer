<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_parent"
    android:background="#fff"
    android:layoutDirection="ltr"
    tools:context="com.orchidatech.askandanswer.Activity.ForgetPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_background"
                android:id="@+id/img_background"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo"
                android:contentDescription="@string/contenDesc_logo"
                android:id="@+id/iv_logo"
                android:layout_below="@+id/iv_back"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_back"
                android:src="@drawable/ic_back_flat"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />

            <View android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#e8e7e7"
                android:layout_below="@+id/img_background"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:textColor="@color/ed_text_color"
                android:textCursorDrawable="@drawable/ed_cursor_backgnd"                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_email"
                android:paddingLeft="0dp"
                android:hint="@string/ed_email_hint"
                android:imeOptions="actionNext"
                android:id="@+id/ed_email" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:textColor="@color/ed_text_color"
                android:textCursorDrawable="@drawable/ed_cursor_backgnd"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textDirection="ltr"
                android:drawableLeft="@drawable/ic_password"
                android:paddingLeft="0dp"
                android:hint="@string/ed_new_password_hint"
                android:imeOptions="actionNext"
                android:id="@+id/ed_new_password" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:textColor="@color/ed_text_color"
                android:textCursorDrawable="@drawable/ed_cursor_backgnd"
                android:singleLine="true"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_password"
                android:textDirection="ltr"
                android:layout_below="@+id/ed_password"
                android:paddingLeft="0dp"
                android:hint="@string/ed_re_new_password_hint"
                android:imeOptions="actionDone"
                android:id="@+id/ed_repassword" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update_password"
                android:background="@drawable/btn_selector"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#fff"
                android:layout_marginTop="40dp"
                android:textSize="25dp"
                android:textAllCaps="false"
                android:padding="20dp"

                android:id="@+id/btn_update_password" />

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
