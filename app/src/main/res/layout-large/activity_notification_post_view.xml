<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="#fff"
    tools:context="com.orchidatech.askandanswer.Activity.NotificationPostView">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#2dbda6"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/toolbar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_post_info"
        android:padding="15dp"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/rl_person_photo"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/tv_person_photo"
                android:layout_marginRight="10dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:id="@+id/iv_profile"
                app:civ_border_width="1dp"
                app:civ_border_color="#ece8e7"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_toRightOf="@+id/rl_person_photo"
            android:id="@+id/rl_pst_owner">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_person_name"
                android:text="June Smith"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_postDate"
                android:layout_below="@+id/tv_person_name"
                android:layout_alignLeft="@+id/tv_person_name"
                android:text="Oct 16, 2015"
                android:textSize="15sp"
                android:layout_marginBottom="25dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_post"
            android:layout_below="@+id/rl_pst_owner"
            android:layout_alignLeft="@+id/rl_pst_owner"
            android:text="@string/view_post_example"
            android:textSize="15sp"
            android:textColor="#b5b5b5"
            android:layout_marginBottom="19dp"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:id="@+id/iv_post"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_below="@+id/tv_post"
            android:layout_alignLeft="@+id/rl_pst_owner"
            />

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/divider"
            android:layout_below="@+id/iv_post"
            android:layout_marginTop="15dp"
            android:background="#e6e6e6" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_postEvents"
            android:layout_alignLeft="@+id/tv_post"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/divider"
            android:orientation="horizontal"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ll_comment"
                android:gravity="left"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_comment"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_comment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_comment"
                    android:layout_gravity="right|center_vertical"
                    android:text="@string/tv_comment"
                    android:textSize="12sp"
                    android:textColor="#959595"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/ll_comment"
                android:id="@+id/ll_share"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_share"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_share"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_share"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/tv_share"
                    android:textSize="12sp"
                    android:textColor="#959595"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ll_favorite"
                android:layout_toRightOf="@+id/ll_share"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_favorite"
                    android:layout_marginRight="5dp"

                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_favorite"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_favorite"
                    android:layout_gravity="center_vertical|right"
                    android:text="@string/tv_favorite"
                    android:textSize="12sp"
                    android:textColor="#959595"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/rl_error"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uncolored_logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/uncolored_logo"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tv_your_questions"
            android:id="@+id/tv_error"
            android:layout_below="@+id/uncolored_logo"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"/>

    </RelativeLayout>
    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pb_loading"
        android:layout_height="50dp"
        android:layout_width="50dp"
        app:cpv_animAutostart="true"
        android:layout_centerInParent="true"
        app:cpv_indeterminate="true"
        app:cpv_color = "#2dbda6"/>

</RelativeLayout>
