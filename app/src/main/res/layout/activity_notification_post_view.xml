<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context="com.orchidatech.askandanswer.Activity.NotificationPostView">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#2dbda6"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/toolbar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/rl_person_photo"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/iv_profile"
                app:civ_border_width="1dp"
                app:civ_border_color="#ece8e7"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/offline_photo_backgnd"
                android:id="@+id/tv_person_photo"
                android:text="A"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_toRightOf="@+id/rl_person_photo"
            android:id="@+id/rl_pst_owner">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_person_name"
                android:text="June Smith"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_postDate"
                android:layout_below="@+id/tv_person_name"
                android:layout_alignLeft="@+id/tv_person_name"
                android:text="Oct 16, 2015"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_post"
            android:layout_below="@+id/rl_pst_owner"
            android:layout_alignLeft="@+id/rl_pst_owner"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/view_post_example"
            android:background="@drawable/tv_view_post_backgnd"
            android:textSize="14sp"
            android:textColor="#b5b5b5"
            android:layout_marginBottom="14dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_post"
            android:layout_below="@+id/tv_post"
            android:src="@drawable/android_wallpaper"
            android:layout_alignLeft="@+id/rl_pst_owner"
            android:scaleType="centerCrop"
            android:visibility="visible"
            />
    </RelativeLayout>

</RelativeLayout>
