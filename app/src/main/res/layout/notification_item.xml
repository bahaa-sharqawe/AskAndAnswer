<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_notification"
    android:layoutDirection="ltr"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_profile"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_user"
            app:civ_border_width="1dp"
            app:civ_border_color="#ece8e7"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tv_person_photo"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>
        <!--<TextView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:background="@drawable/offline_photo_backgnd"-->
            <!--android:id="@+id/tv_person_photo"-->
            <!--android:gravity="center"-->
            <!--android:textSize="18sp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notification_text"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@+id/iv_profile"
            android:layout_toRightOf="@+id/iv_profile"
            android:text="@string/post_example"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notif_date"
            android:layout_alignLeft="@+id/tv_notification_text"
            android:layout_below="@+id/tv_notification_text"
            android:layout_marginTop="8dp"
            android:text="Dec 13, 2015"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_notification_text"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/notif_date"
            android:text="@string/post_example"
            android:padding="6dp"
            android:visibility="gone"
            android:background="@drawable/notification_backgnd"/>
    </RelativeLayout>

</RelativeLayout>