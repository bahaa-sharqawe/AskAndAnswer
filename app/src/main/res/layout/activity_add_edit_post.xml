<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layoutDirection="ltr"
    tools:context="com.orchidatech.askandanswer.Activity.AddEditPost">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#2dbda6"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:entries="@array/categories"
        android:theme="@style/SpinnerStyle"
        >
    </Spinner>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2dbda6"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_addPost"
            android:text="@string/add_post"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/iv_camera"
            android:layout_below="@+id/tv_addPost"
            android:layout_alignLeft="@+id/tv_addPost"
            android:src="@drawable/ic_camera_flat"
            android:background="@drawable/iv_add_post_backgnd"
            android:padding="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/rl_post_photo"
            android:layout_below="@+id/tv_addPost"
            android:layout_alignTop="@+id/iv_camera"
            android:layout_alignBottom="@+id/iv_camera"
            android:layout_toRightOf="@+id/iv_camera"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_post"
                android:src="@drawable/android_wallpaper"
                android:scaleType="centerCrop"
               />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/iv_delete"
                android:src="@drawable/ic_close"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/ed_postDesc"
            android:layout_below="@+id/iv_camera"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:hint="@string/ed_add_post_hint"
            android:gravity="top"
            android:padding="15dp"
            android:ems="10"
            android:layout_alignLeft="@+id/iv_camera"
            android:background="@drawable/ed_add_post_backgnd"/>
    </RelativeLayout>


</LinearLayout>
