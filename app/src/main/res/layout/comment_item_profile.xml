<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4"
        android:paddingTop="10dp"
        android:paddingRight="10dp"

>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_profile"
            android:id="@+id/rl_post_desc">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_person_name"
                android:text="Paco Xiao"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_postDate"
                android:layout_below="@+id/tv_person_name"
                android:layout_alignLeft="@+id/tv_person_name"
                android:text="Oct 16, 2015"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_postContent"
                android:layout_below="@+id/tv_postDate"
                android:layout_alignLeft="@+id/tv_person_name"
                android:text="@string/post_example"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/rl_post_desc"
            android:id="@+id/rl_post_photo">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/iv_postImage"
                android:scaleType="centerCrop"
                android:layout_marginLeft="120dp"
                android:src="@drawable/android_wallpaper"
                />
            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/divider"
                android:layout_below="@+id/iv_postImage"
                android:layout_marginTop="10dp"
                android:background="#e6e6e6" />

            <android.support.design.widget.FloatingActionButton
                xmlns:fab="http://schemas.android.com/apk/res-auto"

                android:id="@+id/fab_edit_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_edit"
                fab:backgroundTint="#f0ae24"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_postImage"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/divider">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_like"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_likes"
                        android:layout_gravity="center_vertical"
                        android:text="10"
                        android:textSize="14sp"
                        android:textColor="#959595"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_like"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/like"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ll_like"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_unlikes"
                        android:layout_gravity="center_vertical"
                        android:text="30"
                        android:textSize="14sp"
                        android:textColor="#959595"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_unlike"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/unlike"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>




        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_profile"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#cdcdcd"
            android:src="@drawable/man"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>