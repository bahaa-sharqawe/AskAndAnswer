<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    android:layoutDirection="ltr"
    tools:context="com.orchidatech.askandanswer.Activity.Login">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/logo"
        android:contentDescription="@string/contenDesc_logo"
        android:id="@+id/iv_logo"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:visibility="visible"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="vertical"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        android:id="@+id/ll_form"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ed_text_color"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_name"
            android:textCursorDrawable="@drawable/ed_cursor_backgnd"
            android:drawablePadding="10dp"
            android:paddingLeft="0dp"
            android:textSize="21sp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"

            android:hint="@string/ed_name_hint"
            android:imeOptions="actionNext"
            android:id="@+id/ed_name" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:singleLine="true"
            android:textColor="@color/ed_text_color"
            android:inputType="textPassword"
            android:textDirection="ltr"
            android:drawableLeft="@drawable/ic_password"
            android:layout_below="@+id/ed_email"
            android:textCursorDrawable="@drawable/ed_cursor_backgnd"
            android:drawablePadding="10dp"
            android:paddingLeft="0dp"
            android:textSize="21sp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:hint="@string/ed_password_hint"
            android:imeOptions="actionDone"
            android:id="@+id/ed_password" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_forget_password"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="#969595"
                android:text="@string/forget"/>
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter"
            android:textSize="26dp"
            android:padding="35dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/btn_selector"
            android:textColor="#fff"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
          android:padding="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/btn_fb"
                android:clickable="true"
                android:gravity="center"
                android:background="@drawable/btn_social_backgnd">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_fb"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/facebook"
                    android:id="@+id/tv_fb"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <Space
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/btn_fb"
                android:layout_alignBottom="@+id/btn_fb"
                android:id="@+id/btn_gplus"
                android:clickable="true"
                android:background="@drawable/btn_social_backgnd">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_google"
                    android:layout_marginRight="50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_google"
                    android:text="@string/google"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#969595"
            android:layout_gravity="center_horizontal"
            android:text="@string/tv_signup"
            android:id="@+id/tv_signup_now"
            />
    </LinearLayout>
</ScrollView>
</LinearLayout>

</android.support.design.widget.CoordinatorLayout>
