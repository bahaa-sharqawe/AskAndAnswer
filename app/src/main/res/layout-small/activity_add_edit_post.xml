<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layoutDirection="ltr"
    tools:context="com.orchidatech.askandanswer.Activity.AddEditPost">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#2dbda6"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:gravity="left"
        android:entries="@array/categories"
        android:theme="@style/SpinnerStyle"
        >
    </Spinner>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#2dbda6"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_addPost"
            android:text="@string/add_post"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_camera"
            android:layout_below="@+id/tv_addPost"
            android:layout_alignLeft="@+id/tv_addPost"
            android:src="@drawable/ic_camera_flat"
            android:background="@drawable/iv_add_post_backgnd"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/rl_post_photo"
            android:layout_below="@+id/tv_addPost"
            android:layout_alignTop="@+id/iv_camera"
            android:layout_alignBottom="@+id/iv_camera"
            android:layout_toRightOf="@+id/iv_camera"
            android:background="#9e9e9e"
            android:visibility="gone"
            >
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/iv_post"
                android:visibility="visible"
                fresco:actualImageScaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:id="@+id/iv_delete"
                android:src="@drawable/ic_close"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/ed_postDesc"
            android:layout_below="@+id/iv_camera"
            android:textColor="@color/ed_text_color"
            android:textCursorDrawable="@drawable/ed_cursor_backgnd"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:hint="@string/ed_add_post_hint"
            android:gravity="top"
            android:padding="10dp"
            android:ems="10"
            android:layout_alignLeft="@+id/iv_camera"
            android:background="@drawable/ed_add_post_backgnd"/>
    </RelativeLayout>


</LinearLayout>
